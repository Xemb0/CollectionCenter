<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:background="@drawable/background_bottom_round_corner">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/location"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <LinearLayout

            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_margin="@dimen/_10sdp"
            android:id="@+id/locationLayout"
            android:gravity="center"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            android:background="@drawable/rounded_button"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/gifImageView"
                android:scaleType="centerCrop"
                android:translationX="@dimen/_minus5sdp"
                android:layout_width="wrap_content"
                android:layout_gravity="top"
                android:translationY="@dimen/_minus1sdp"
                android:layout_height="wrap_content"
                android:background="#00FFFFFF"

                android:src="@drawable/ic_location" />


            <TextView
            android:id="@+id/select_city"
            android:layout_width="0dp"
            android:layout_weight="1"
                android:alpha=".7"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:text="Rishikesh"/>
            <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/ic_arrow_down"
                android:layout_gravity="start|center_vertical"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                />

        </LinearLayout>
        <ImageView
            android:id="@+id/userButton"
            android:layout_margin="20dp"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
        android:src="@drawable/ic_user_3d"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.SearchView
        android:id="@+id/search_bar"
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:layout_below="@+id/location"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="5dp"
        android:textAppearance="@color/black"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/border_strok" />

</RelativeLayout>
