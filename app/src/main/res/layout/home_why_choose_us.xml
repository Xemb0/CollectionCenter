<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#E6E6E6"
    android:orientation="vertical"
    android:gravity="center"

    android:id="@+id/our_services"
    android:padding="@dimen/_5sdp">
    <TextView
        android:layout_width="match_parent"
        android:textStyle="bold"
        android:fontFamily="sans-serif"
        android:text="Why Choose Us ?"
        android:textColor="@color/black"
        android:layout_margin="@dimen/_15sdp"
        android:textSize="@dimen/_15sdp"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:gravity="center">
        <androidx.cardview.widget.CardView

            android:layout_width="0dp"
            android:layout_weight="1"

            android:layout_margin="@dimen/_5sdp"
            android:elevation="0dp"
            android:alpha=".9"
            app:cardCornerRadius="@dimen/_10sdp"
            android:layout_height="@dimen/_60sdp">


            <ImageView
                android:layout_width="match_parent"
                android:src="@drawable/ic_cirtified_labs"
                android:padding="@dimen/_15sdp"
                android:background="@color/white"

                android:scaleType="fitStart"
                android:layout_height="match_parent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:layout_marginLeft="@dimen/_30sdp"
                android:layout_marginRight="@dimen/_10sdp"

                android:fontFamily="sans-serif"
                android:textColor="@color/black"

                android:textStyle="bold"
                android:alpha=".7"

                android:text="Certified \nlabs" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView

            android:layout_width="0dp"
            android:layout_margin="@dimen/_5sdp"
            android:layout_weight="1"
            app:cardCornerRadius="@dimen/_10sdp"

            android:elevation="0dp"
            android:alpha=".9"
            android:layout_height="@dimen/_60sdp">


            <ImageView
                android:layout_width="match_parent"
                android:src="@drawable/ic_home_collection"
                android:background="@color/white"

                android:scaleType="fitStart"
                android:padding="@dimen/_15sdp"
                android:layout_height="match_parent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:layout_marginLeft="@dimen/_30sdp"

                android:fontFamily="sans-serif"
                android:textColor="@color/black"

                android:textStyle="bold"
                android:alpha=".7"

                android:text="Free Home \nSample Pickup"/>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal"
        android:gravity="center">
        <androidx.cardview.widget.CardView

            android:layout_width="0dp"
            android:layout_weight="1"

            android:elevation="0dp"
            android:alpha=".9"

            android:layout_margin="@dimen/_5sdp"
            app:cardCornerRadius="@dimen/_10sdp"
            android:layout_height="@dimen/_60sdp">


            <ImageView
                android:layout_width="match_parent"
                android:src="@drawable/ic_report_24"
                android:padding="@dimen/_15sdp"
                android:background="@color/white"


                android:scaleType="fitStart"
                android:layout_height="match_parent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"


                android:textStyle="bold"
                android:alpha=".7"
                android:layout_marginLeft="@dimen/_40sdp"
                android:layout_marginRight="@dimen/_10sdp"

                android:fontFamily="sans-serif"
                android:textColor="@color/black"

                android:text="Report Under \n24 Hours"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView

            android:layout_width="0dp"
            android:layout_weight="1"

            android:elevation="0dp"
            android:alpha=".9"
            android:layout_margin="@dimen/_5sdp"
            app:cardCornerRadius="@dimen/_10sdp"
            android:layout_height="@dimen/_60sdp">


            <ImageView
                android:layout_width="match_parent"
                android:src="@drawable/ic_painless"
                android:padding="@dimen/_15sdp"
                android:background="@color/white"


                android:scaleType="fitStart"
                android:layout_height="match_parent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:textStyle="bold"
                android:alpha=".7"

                android:layout_marginLeft="@dimen/_40sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:fontFamily="sans-serif"
                android:textColor="@color/black"

                android:text="Painless \nSample"/>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal"
        android:gravity="center">
        <androidx.cardview.widget.CardView

            android:layout_width="0dp"
            android:layout_weight="1"

            android:elevation="0dp"
            android:alpha=".9"

            android:layout_margin="@dimen/_5sdp"
            app:cardCornerRadius="@dimen/_10sdp"
            android:layout_height="@dimen/_60sdp">


            <ImageView
                android:layout_width="match_parent"
                android:src="@drawable/ic_free_consultation"
                android:padding="@dimen/_15sdp"
                android:background="@color/white"

                android:scaleType="fitStart"
                android:layout_height="match_parent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"


                android:textStyle="bold"
                android:alpha=".7"
                android:layout_marginLeft="@dimen/_40sdp"
                android:layout_marginRight="@dimen/_10sdp"

                android:fontFamily="sans-serif"
                android:textColor="@color/black"

                android:text="Free \nConsultaion"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView

            android:layout_width="0dp"
            android:layout_weight="1"

            android:elevation="0dp"
            android:alpha=".9"
            android:layout_margin="@dimen/_5sdp"
            app:cardCornerRadius="@dimen/_10sdp"
            android:layout_height="@dimen/_60sdp">


            <ImageView
                android:layout_width="match_parent"
                android:src="@drawable/ic_affordable_price"
                android:padding="@dimen/_15sdp"
                android:background="@color/white"
                android:scaleType="fitStart"

                android:layout_height="match_parent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textStyle="bold"
                android:alpha=".7"
android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_40sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:fontFamily="sans-serif"
                android:textColor="@color/black"

                android:text="Affordable\nPricing"/>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"/>


</LinearLayout>