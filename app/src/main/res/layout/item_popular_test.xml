<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="start"

    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_220sdp"
        android:layout_height="@dimen/_270sdp"
        android:layout_margin="@dimen/_5sdp"
        android:background="#FFFFFF"
        android:elevation="@dimen/_5sdp"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="@dimen/_10sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@color/white"

            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_13sdp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/popular_test_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:textColor="@color/my_primary"
                    android:alpha=".9"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:text="Kideny Function Test With Calcium"
                    android:textStyle="bold"
                    android:textSize="@dimen/_14sdp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/popular_test_inclusions"
                    android:fontFamily="sans-serif"
                    android:textColor="@color/black"
                    android:alpha=".8"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:text="Inclusions  : T3, T4, TSH" />

                <TextView
                    android:id="@+id/popular_test_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:alpha=".7"
                    android:textColor="@color/black"
                    android:text="The test assesses the thyroid gland's functioning
and can help diagnose hypothyroidism or hyperthyroidism."/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:layout_height="2dp"
                android:background="@color/my_primary"
                android:layout_marginBottom="@dimen/_5sdp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/_13sdp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <!-- TextViews for price details -->
                    <TextView
                        android:id="@+id/popular_test_mrp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="₹399"

                        android:textColor="@color/black"
                        android:alpha=".4"
                        android:textSize="@dimen/_10sdp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/popular_test_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/my_primary"
                        android:text="₹299"
                        android:textSize="@dimen/_15sdp"
                        android:textStyle="bold" />

                </LinearLayout>

                <Button

                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:id="@+id/popular_btn_add_to_cart"
                    android:layout_height="wrap_content"
                    android:text="ADD TO CART"/>

            </LinearLayout>



        </LinearLayout>


    </androidx.cardview.widget.CardView>



</LinearLayout>