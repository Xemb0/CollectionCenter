<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/user_fragment"
    android:orientation="vertical"
    android:background="@color/my_primary"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="@dimen/_80sdp"
        android:background="@drawable/rounded_button"
        android:orientation="horizontal"
        android:gravity="center"
        android:id="@+id/btn_login"

        android:layout_gravity="right|center_vertical"
        android:layout_margin="@dimen/_20sdp"
        android:layout_height="@dimen/_30sdp">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:id="@+id/login_button_text"

            android:textColor="@color/white"
            android:layout_margin="@dimen/_5sdp"
            android:textStyle="bold"/>
        <ImageView
            android:layout_width="wrap_content"
            android:src="@drawable/ic_login"
            android:scaleType="fitCenter"
            android:layout_height="wrap_content"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_450sdp"
        android:background="@drawable/curved_top"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:orientation="vertical"

            android:layout_height="@dimen/_100sdp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"

                android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/ivProfilePhoto"
                android:layout_width="@dimen/_80sdp"
                android:layout_margin="@dimen/_10sdp"
                android:layout_height="@dimen/_80sdp"
                android:src="@drawable/ic_user_3d"


                android:scaleType="centerCrop" />

            </LinearLayout>
            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Guest User"
                android:alpha=".8"
                android:textStyle="bold"
                android:fontFamily="sans-serif"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ivProfilePhoto" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">



                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView"

                    android:layout_width="0dp"
                    android:layout_weight="1"

                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    android:background="@color/white"
                    android:elevation="@dimen/_15sdp"
                    app:cardCornerRadius="@dimen/_5sdp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@color/white"
                        android:layout_gravity="center"

                        android:gravity="center">


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:alpha=".8"
                        android:background="@color/white"
                        android:layout_margin="@dimen/_5sdp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/shopping_cart_icon" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="My Orders"
                            android:layout_margin="@dimen/_8sdp"
                            android:textSize="@dimen/_10sdp"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:alpha=".9"
                            android:fontFamily="sans-serif"/>
                </LinearLayout>

                </androidx.cardview.widget.CardView>



                <androidx.cardview.widget.CardView
                    android:id="@+id/my_orders_cart"

                    android:layout_width="0dp"
                    android:layout_weight="1"

                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    android:background="@color/white"
                    android:elevation="@dimen/_15sdp"
                    app:cardCornerRadius="@dimen/_5sdp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@color/white"
                        android:layout_gravity="center"

                        android:gravity="center">


                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:background="@color/white"
                            android:layout_margin="@dimen/_5sdp"
                            android:scaleType="fitCenter"
                            android:alpha=".8"
                            android:src="@drawable/file_download_icon" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="My Orders"
                            android:layout_margin="@dimen/_8sdp"
                            android:textSize="@dimen/_10sdp"
                            android:textAlignment="center"
                            android:alpha=".9"
                            android:textColor="@color/black"
                            android:fontFamily="sans-serif"/>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">



        </LinearLayout>


    </LinearLayout>




</LinearLayout>