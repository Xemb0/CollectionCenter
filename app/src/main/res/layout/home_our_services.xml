<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E6E6E6"
        android:orientation="vertical"
        android:gravity="center"

        android:id="@+id/our_services"
        android:padding="@dimen/_5sdp">
        <TextView
            android:layout_width="match_parent"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:text="Our Services"
            android:textColor="@color/black"
            android:layout_margin="@dimen/_15sdp"
            android:textSize="@dimen/_15sdp"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            android:gravity="center">
            <androidx.cardview.widget.CardView

                android:layout_width="0dp"
                android:layout_weight="1"

                android:layout_margin="@dimen/_5sdp"
                android:elevation="0dp"
                android:alpha=".9"
                app:cardCornerRadius="@dimen/_10sdp"
                android:layout_height="@dimen/_60sdp">


                <ImageView
                    android:layout_width="match_parent"
                    android:src="@drawable/ic_blood_donation"

                    android:background="@drawable/bg_our_services"
                    android:padding="@dimen/_5sdp"

                    android:scaleType="fitStart"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"

                    android:layout_marginLeft="@dimen/_30sdp"
                    android:textAlignment="center"
                    android:layout_marginRight="@dimen/_10sdp"

                    android:fontFamily="sans-serif"
                    android:textColor="@color/black"

                    android:textStyle="bold"
                    android:alpha=".7"

                    android:text="Blood \nRequirements" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView

                android:layout_width="0dp"
                android:layout_margin="@dimen/_5sdp"
                android:layout_weight="1"
                app:cardCornerRadius="@dimen/_10sdp"

                android:elevation="0dp"
                android:alpha=".9"
                android:layout_height="@dimen/_60sdp">


                <ImageView
                    android:layout_width="match_parent"
                    android:src="@drawable/ic_pathology"

                    android:background="@drawable/bg_our_services"

                    android:scaleType="fitStart"
                    android:padding="@dimen/_5sdp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"

                    android:layout_marginLeft="@dimen/_30sdp"
                    android:textAlignment="center"
                    android:layout_marginRight="@dimen/_10sdp"

                    android:fontFamily="sans-serif"
                    android:textColor="@color/black"

                    android:textStyle="bold"
                    android:alpha=".7"

                    android:text="Pathology \nServices"/>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal"
            android:gravity="center">
            <androidx.cardview.widget.CardView

                android:layout_width="0dp"
                android:layout_weight="1"

                android:elevation="0dp"
                android:alpha=".9"

                android:layout_margin="@dimen/_5sdp"
                app:cardCornerRadius="@dimen/_10sdp"
                android:layout_height="@dimen/_60sdp">


                <ImageView
                    android:layout_width="match_parent"
                    android:src="@drawable/ic_routine_checkup"
                    android:padding="@dimen/_5sdp"

                    android:background="@drawable/bg_our_services"


                    android:scaleType="fitStart"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"


                    android:textStyle="bold"
                    android:alpha=".7"
                    android:layout_marginLeft="@dimen/_40sdp"
                    android:textAlignment="center"
                    android:layout_marginRight="@dimen/_10sdp"

                    android:fontFamily="sans-serif"
                    android:textColor="@color/black"

                    android:text="Routine \nTesting"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView

                android:layout_width="0dp"
                android:layout_weight="1"

                android:elevation="0dp"
                android:alpha=".9"
                android:layout_margin="@dimen/_5sdp"
                app:cardCornerRadius="@dimen/_10sdp"
                android:layout_height="@dimen/_60sdp">


                <ImageView
                    android:layout_width="match_parent"
                    android:src="@drawable/ic_genomic"
                    android:padding="@dimen/_5sdp"


                    android:background="@drawable/bg_our_services"

                    android:scaleType="fitStart"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"

                    android:textStyle="bold"
                    android:alpha=".7"

                    android:layout_marginLeft="@dimen/_40sdp"
                    android:textAlignment="center"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:fontFamily="sans-serif"
                    android:textColor="@color/black"

                    android:text="Genomic Testing"/>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>